@model IEnumerable<shanuMVCUserRoles.Models.HolidayViewModel>

@{
    ViewBag.Title = "InPending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>InPending</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamLeaderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysOff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TLEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Flag)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.Flag == false && item.Email ==User.Identity.Name)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamLeaderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysOff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TLEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flag)
            </td>

        </tr>
    }

}

</table>
